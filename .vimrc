set number
filetype plugin indent on
syntax on
set hlsearch
set runtimepath^=~/.vim/pack/default/start/ctrlp.vim
set noswapfile
set shiftwidth=2
set tabstop=2
set autoindent
set smartindent

let mapleader=" "
let g:EasyMotion_leader_key = '<Leader>'

map <C-n> :NERDTreeToggle<CR>

colorscheme gruvbox
